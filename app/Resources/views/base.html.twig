<!DOCTYPE html>
<html>
    <head>
         <meta charset="UTF-8" />
        <title>{% block title %}Coloc + {% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <!-- <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" /> -->
        <!-- Latest compiled and minified CSS -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> 
        <style>
            .footer {
                margin-bottom: 35px;
                margin-top: 5cm;
                left: 0;
                bottom: 0;
                width: 100%;
                background-color: grey;
                color: white;
                text-align: center;
            }
			#balise{ background: white; font: 18px/1.5 sans-serif;
				border-radius: 5px;
				padding : 30px;
				margin-left: auto;
				margin-right: auto;}
			#coteG {
				background: white; font: 18px/1.5 sans-serif;
				border-radius: 5px;
				padding : 30px;
				float: left;

			}
			body		/* Body correspond à toute la page */
			{
	
				background-image: url({{ asset('ville.jpg')}});
				
				background-size : 100%;		/*On affiche l'arrière plan à 100%*/
				background-attachment:fixed;	/*On fixe l'arrière plan*/
				background-repeat : no-repeat; /*Le fond ne se repettera pas*/
				
				font-family:Verdana;
				
			}

        </style>
    </head>
    <body>
		
        <nav class="navbar navbar-inverse" style="background-color : #6D071A">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href={{ path('homepage') }}>Coloc +</a>
                </div>

                <ul class="nav navbar-nav navbar-right">
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haria-haspopup="true" aria-expanded="false">
						<span class="glyphicon glyphicon-globe"></span> <span class="carret"></span> </a>
						<ul class="dropdown-menu">
							<li class="active"><a href={{ path('homepage', {'_locale': 'fr' }) }}>Français</a> </li>
							<li><a href={{ path('homepage', {'_locale': 'en' })}}>English</a> </li>
						</ul>
					</li>
					<li><a href={{ path('fos_user_registration_register') }}><span class="glyphicon glyphicon-user"></span> {{ 'sign_up'|trans }}</a></li>
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
						{{ 'logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
						<li><a href="{{ path('fos_user_security_logout') }}">{{ 'logout'|trans }}</a></li>
					{% else %}
						<li><a href={{ path('fos_user_security_login') }}><span class="glyphicon glyphicon-log-in"></span> {{ 'login'|trans }}</a></li>
					{% endif %}
                </ul>
            </div>
        </nav>

		<div id="balise" class="col-sm-2" style="margin-left: 1%;">
						<h4>Affiner la recherche</h4>
						<h5>Par type</h5>
						<form method="POST" name="colocation" class="form-horizontal" action="">
	
						<div class="control-group">
							{{form_label(rech_coloc_form.ville)}}
							{{form_errors(rech_coloc_form.ville)}}
							{{form_widget(rech_coloc_form.ville)}}
						</div>
						<input type="submit" name="Valider" value="Valider" class="btn btn-success"/>
						<a class="btn" href={{ path('homepage') }}>{{ 'action.cancel'|trans }}</a>
						
						<h5>Par nombre de personne</h5>
					
					</div>
		<div id="balise" class="col-sm-2" style="float:right; margin-right: 1%;" >
						<h4>A changer</h4>
						</h5>
					
					</div>
        <div class="container">
            <div class="row">
			
                <div class="col-sm-10">
					{% if app.request.hasPreviousSession %}
						{% for type, messages in app.session.flashbag.all() %}
							{% for message in messages %}
								<li> <div class="flash-{{ type }}">
								{{ message }}
								</div>
							{% endfor %}
						{% endfor %}
					{% endif %}
					
                    {% block body %}
                        

                    {% endblock %}
                </div>
            </div>

			
            <div class="row">
		
                <div class="col-sm-12 footer">
                    {% block footer %}
                    <p>Copyright (c) 2018 L3 Miage - Université de Nantes </p>
                    {% endblock %}

                </div>
            </div>
        </div>

        {% block javascripts %}
            <!-- jQuery library -->
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

            <!-- Latest compiled JavaScript -->
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        {% endblock %}
    </body>
</html>
