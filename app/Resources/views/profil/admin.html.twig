{% extends "@FOSUser/layout.html.twig" %}

{% block body %}
<div  id="ariane" class="col-md-9">
{{ wo_render_breadcrumbs() }}
</div>

<div id="centre" class="col-md-9">
	<div class="container">
			<div class="col-md-10">
				<div class="row">
					<h3>{{'Gestion des utilisateurs'|trans}}</h3>
				</div>
				{% for item in profil %}
				<div class="col-md-11 grille" >
			
					{{ 'Username' |trans }} : {{item.getUsername()}} 
					{{ 'Nom' |trans }} : {{item.getNom()}}
					{{ 'Prenom' |trans }} : {{item.getPrenom()}}
					<a href={{ path('deleteUser', {'id': item.getId() }) }}  class="btn btn-danger btn-md">{{ 'Delete'|trans }}</a> 
						
						
					<br>
				</div>
				
				{% endfor %}
			</div>
			

		</div>
		
	</div>
</div>

{% endblock body %}