{% extends "@FOSUser/layout.html.twig" %}

{% block body %}

    <div class="container">
		<div class="col-md-10">
    		<div class="row">
		    	<h3>{{'Les informations'|trans}}</h3>
		    </div>
			<div class="row">
				{{'Ville'|trans}}: {{colocations.getVille()}}
			</div>
			<div class="row">
				{{'Adresse'|trans}}: {{colocations.getAdresse()}}
			</div>
			<div class="row">
				{{'Type'|trans}}: {{colocations.getType()}}
			</div>
			<div class="row">
				{{'nbChambre'|trans}}: {{colocations.getNbChambre()}}
			</div>
			<div class="row">
				{{'Prix'|trans}}: {{colocations.getPrix()}} 
			</div>
			{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
			<a href={{ path('AjoutDemande',{'id': colocations.getId() }) }}  class="btn btn-primary btn-md">{{ 'Faire une demande'|trans }}</a> 
			{% endif %}
		</div>
		

	</div>
	
</div>

{% endblock %}

